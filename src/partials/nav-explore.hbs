{{#if page.versions.[1]}}
<div class="nav-panel-versions{{#unless page.navigation}} is-active{{/unless}}" data-panel="explore">

  <div class="dropdown">
    <span class="dropdown-label">Neo4j Version</span>

    <select data-current="{{@root.page.version}}" class="version-selector dropdown-styles">
      {{#with @root.page.componentVersion}}
      <option value="" selected>
        {{{ ./title }}} {{@root.page.componentVersion.displayVersion}}
      </option>
      {{/with}}
      {{!-- {{#each site.components}}
      <optgroup label="{{{./title}}}">
          {{#each ./versions}}
          <option value="{{{relativize ./url}}}">{{./displayVersion}}</option>
          {{/each}}
        </optgroup>
      {{/each}} --}}
      {{#each page.versions}}
      {{#unless this.prerelease}}
        <option
          data-version="{{this.displayVersion}}"
          value="{{{relativize this.url}}}"
          {{~#if this.missing}} disabled{{/if}}
        >
      {{this.displayVersion}}
        </option>
      {{/unless}}
      {{/each}}
    </select>
  </div>
</div>
{{/if}}